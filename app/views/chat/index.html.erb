<script>
	$(document).ready(function(){
		/* RECEIVE MESSAGE */
		App.chat.received = function(data)
		{
			$("#chat").append(data['message']+"<br>")
		}
		
		$("#send").click(function(){
            msg = $("#msg").val()	
            if (msg != "" ){
                /* SEND MESSAGE */
                App.chat.send_msg(msg)
                $("#msg").val('\n')
            }
		})
	})
</script>