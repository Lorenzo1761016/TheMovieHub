<% if @people.results.size > 0%>
    <h1> PERSONE </h1>
    <% @people.results.each_slice(5) do |p|%>
        <% p.each do |person| %>
                <%= link_to persona_path(person.id) do %>
                    <% if person.profile_path %>
                        <img src= '<%= image_path('https://image.tmdb.org/t/p/original/'+person.profile_path)%>' width = 18%>
                    <%else%>
                        <img src = '<%= image_path('/no_locandina.webp')%>' width = 18%>
                    <% end %>
                <% end %>
        <% end %>
    <% end %>
<br>
<br>
<% end %>
<% if @movies.results.size > 0 %>
    <% @by_date.each do |s| %>
        <%= s.title %>
        <%= s.release_date %> *
    <% end %>
    <br>
    <% @by_vote.each do |s| %>
        <%= s.title %>
        <%= s.vote_average %> *
    <% end %>
    
    <h1> FILM </h1>
    <% @movies.results.each_slice(5) do |q|%>
        <% q.each do |query| %>
            <%= link_to result_path(query.id) do %>
                <% if query.poster_path %>
                    <img src= '<%= image_path('https://image.tmdb.org/t/p/original/'+query.poster_path)%>' width = 18%>
                <%else%>
                    <img src = '<%= image_path('/no_locandina.webp')%>' width = 18%>
                <% end %>
            <% end %>
        <% end %>
        <br>
        <br>
    <% end %>
<% end %>
<% if @series.results.size > 0 %>
    <h1> SERIE TV </h1>
    <% @series.results.each_slice(5) do |q|%>
        <% q.each do |query| %>
            <%= link_to tv_path(query.id) do %>
                <% if query.poster_path %>
                    <img src= '<%= image_path('https://image.tmdb.org/t/p/original/'+query.poster_path)%>' width = 18%>
                <%else%>
                    <img src = '<%= image_path('/no_locandina.webp')%>' width = 18%>
                <% end %>
            <% end %>
        <% end %>
        <br>
        <br>
    <% end %>
<% end %>
<% if @people.results.size < 1%>
    <% if @movies.results.size < 1%>
        <% if @people.results.size < 1%>
            <h1>Nessun risultato trovato.<%= link_to "Torna alla Home", index_path %></h1>
        <% end %>
    <% end %>
<% end %>


