
<!-- 'https://image.tmdb.org/t/p/original/' -->
<% @res.each do |query|%>
    <%= link_to "https://www.themoviedb.org/movie/"+query.id.to_s+"?language=it-IT" do %>
        <img src= '<%= image_path('/no_locandina.webp') %>' width = 13%>
        Titolo: <%= query.title %>
    <% end %>
    <br>
    Trama: <%= query.overview %>
    <br>
    Data Di Uscita: <%= query.release_date %>
    <br>
    Valutazione: <%= query.vote_average%>/10
    <br>
    ID: <%= query.id %>
    <br>
    <br>
    <% end %>
