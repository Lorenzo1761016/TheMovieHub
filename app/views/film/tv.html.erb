                        <h4 class = "nom"> <%= character.name %> </h4>
                    <% end %>
                    <h5> <%= character.character %> </h5>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="movie-castcrew"><span class="nom">Produzione</span>
