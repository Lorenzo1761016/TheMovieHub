<div class="moviecard">
  <div class="movie-poster play-trailer">
  </div>
  <h3> <%= link_to "Torna alla serie", tv_path(params[:id]), class: "nom"%> </h3>
  <div id="movie-content">
    <div class="movie-title"><%=@season.name %></div>
    <div class="movie-details"><span class="movie-rating"><%= @season.air_date %></span><span class="movie-duration"><%= @season.episodes.size %> episodi </span></div>
    <div class="movie-synopsis"><span class="nom">Trama</span>
        <% if @season.overview != ""%>
            <div style = "margin-left: 5px"><span style = "font-size: 14px"><%= @season.overview %></span></div>
        <% else %>
            <div><span style = "font-size: 14px">La trama non Ã¨ disponibile</span></div>
        <% end %>
    </div>
</div>

<h1> EPISODI </h1>
<% @season.episodes.each do |ep|%>
    <div class = "container cnt">
        <%= link_to episode_path(ep.show_id,ep.season_number,ep.episode_number) do %>
            <% if ep.still_path %>
                <img src= '<%= image_path('https://image.tmdb.org/t/p/original/'+ep.still_path)%>' width = 22%>
            <%else%>
                <img src = '<%= image_path('/no_locandina.webp')%>' width = 22%  %>
            <% end %>
            Numero Episodio: <%= ep.episode_number %>
        <% end %>
        - Nome: <%= ep.name %> - Valutazione Media: <%= ep.vote_average %>/10
        <br>
        Trama: <%= ep.overview %>
        <br>
        Crew: 
        <% ep.crew.each do |c| %>
        <%= link_to persona_path(c.id) do %>    
            <%= c.name %> 
        <% end %>
        - ruolo: <%= c.job %> -
        <% end %>
        <br>
        Guest Star:
        <% ep.guest_stars.each do |gs| %>
            <%= link_to persona_path(gs.id) do %>
                <%= gs.name %>
            <% end %>
            - ruolo: <%= gs.character %>
        <% end %>
    </div>
<% end %>
