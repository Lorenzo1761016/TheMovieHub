<header class="navbar navbar-fixed-top navbar-inverse">
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src='https://kit.fontawesome.com/a076d05399.js'></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

  
  <div class="container">
    <%= link_to "MoviePedia", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Database", index_path %></li>
        <li><%= link_to "Tweets", tweets_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Chat", chat_path %></li>
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <% if current_user.admin? %>
            <li><%= link_to "All Users", users_path %></li>
          <% end %>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete, data: {confirm: "Sei sicuro di voler uscire?"} %></li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>