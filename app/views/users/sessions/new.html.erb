<% provide(:title, 'Log In') %>
<div class = "moviecard">
  <div class = "card bg-light corp">
    <article class="card-body mx-auto" style="max-width: 600px;">
      <h2 class="card-title mt-3 text-center">Effettua l'accesso con</h2>

      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-twitter" do %>
            <i class="fab fa-<%=provider%>"></i>
            Signin with <%= OmniAuth::Utils.camelize(provider) %>
          <% end %><br />
        <% end %>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h3  class="card-title mt-3 text-center">Oppure accedi<h3>
        <h3  class="card-title mt-3 text-center">con il tuo account Moviepedia<h3>
        <div class="form-group input-group wid">
          <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
          <%= f.label :email %><br />
          <%= f.email_field :email, size: "51", autofocus: true, autocomplete: "email" %>  
        </div>

         <div class="form-group input-group wid">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          <%= f.label :password %><br />
          <%= f.password_field :password, size: "50", autocomplete: "current-password" %>
        </div>
        
  

        <% if devise_mapping.rememberable? %>
          <div class="form-group input-group wid" style="margin-bottom: 50px" >
            <span class="input-group-text"> <i class="fa fa-bookmark"></i> </span>
            <%= f.label :remember_me %>
            <%= f.check_box :remember_me %>
          </div>
        <% end %>

        <div class="form-group actions">
          <%= f.submit "Log In", class:"btn btn-primary btn-block" %>
        </div>    
        <p class="text-center">Non hai ancora un account? <%= link_to "Registrati", new_user_registration_path %> </p>    

      <% end %>

    </article>
  </div>
</div>




<style>

body {
  background: #B5B5B5;
}

.btn{
  margin: 20px 0 20px 0;
}

