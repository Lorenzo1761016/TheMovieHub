  font-family: 'Helvetica', sans-serif, 'Ariel';
  position: absolute;
  background: #ffffff;
  color: #555555;
  margin: 10px;
  width: 1100px;
  max-width: 2000px;
  min-height: 300px;
  height: auto;
  -moz-box-shadow: -5px 5px 15px;
  -webkit-box-shadow: -5px 5px 15px;
  box-shadow: -5px 5px 15px;
  border-radius: 10px;
  position:relative;

}

.corp{
  margin: 30px 0 30px 0;
  flex-direction: column;
  display: flex;
  align-items: center;
}

.btn-twitter{
  width: 500px;
}

.wid{
  width: 400px;
  margin-left: 50px;
}

.divider-text {
    position: relative;
    text-align: center;
    margin-top: 15px;
    margin-bottom: 15px;
}
